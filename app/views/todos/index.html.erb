<h1>Todos</h1>
<ul class="todos">
  <% @todos.each do |todo| %>
    <li class="<%= 'completed' if todo.completed? %>">>
    <%= todo.title %>
    <% if todo.completed? %>
      <%= button_to "Mark as incomplete", todo_completion_path(todo), method: :delete %>
    <% else %>
      <%= button_to "Mark as complete", todo_completion_path(todo) %>
    <% end %>
    </li>
  <% end %>
</ul>
<%= link_to 'Create todo', new_todo_path %>
